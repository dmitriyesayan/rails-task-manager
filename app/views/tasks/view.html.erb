<div id="my-tasks" class="flex">
  <h1><%= @task.title %></h1>
  <%= link_to "Edit", task_edit_path %>
</div>
<div>
  <p><%= @task.details %></p>
  <div class="flex">
    <% if @task.completed %>
      <input type="checkbox" checked="on" />
      <p>This task is completed</p>
    <% else  %>
      <input type="checkbox" />
      <p>This task is not completed</p>
  </div>
  <% end %>
</div>
<%= link_to "Back to list", tasks_path %>
